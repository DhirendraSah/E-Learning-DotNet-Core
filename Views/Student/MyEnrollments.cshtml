@model List<E_Learning.Models.Enrollment>

@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewData["Title"] = "My Enrollments";
}

<div class="container mt-4">
    <h2>My Enrollments</h2>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Course Title</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">You have not enrolled in any courses yet.</td>
                </tr>
            }
            else
            {
                @foreach (var enrollment in Model)
                {
                    <tr>
                        <td>@enrollment.Course.Title</td>
                        <td>@enrollment.StudentEmail</td>
                        <td>
                            <a href="@Url.Action("ViewCourse", "Student", new { id = enrollment.CourseId })" class="btn btn-primary btn-sm">
                                View Course
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

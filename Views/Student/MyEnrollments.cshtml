@model List<E_Learning.Models.Enrollment>

@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewData["Title"] = "My Enrollments";
}

<div class="container mt-4">
    <h2 class="mb-4">My Enrollments</h2>

    <div class="glass-card p-4">
        <div class="table-responsive">
            <table class="table glass-table">
                <thead>
                    <tr>
                        <th>Course Title</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">You have not enrolled in any courses yet.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var enrollment in Model)
                        {
                            <tr class="glass-row">
                                <td><i class="fas fa-book me-2"></i>@enrollment.Course.Title</td>
                                <td><i class="fas fa-envelope me-2"></i>@enrollment.StudentEmail</td>
                                <td>
                                    <a href="@Url.Action("ViewCourse", "Student", new { id = enrollment.CourseId })" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i> View Course
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Glassmorphism CSS -->
<style>
    /* Glassmorphism Card */
    .glass-card {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    /* Glassmorphism Table */
    .glass-table {
        width: 100%;
        border-collapse: collapse;
    }

        .glass-table thead {
            background: rgba(0, 123, 255, 0.9);
            color: white;
            text-transform: uppercase;
        }

        .glass-table th, .glass-table td {
            padding: 12px;
            text-align: left;
        }

        .glass-table tbody tr.glass-row {
            background: rgba(255, 255, 255, 0.5);
            backdrop-filter: blur(10px);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 8px;
        }

            .glass-table tbody tr.glass-row:hover {
                transform: translateY(-3px);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
            }

        .glass-table tbody tr td {
            border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        }

        .glass-table tbody tr:last-child td {
            border-bottom: none;
        }

    /* Icons styling */
    .fas {
        color: #007bff;
    }

    .btn-primary {
        background: linear-gradient(135deg, #007bff, #0056b3);
        border: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-primary:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Learning</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        .navbar-custom {
            background: linear-gradient(to bottom, rgba(135, 206, 250, 0.4), white);
        }

        .create-account-btn {
            margin-left: auto; /* Pushes the button to the far right */
        }

        .footer-custom {
            background-color: black;
            color: white;
            padding: 20px 0;
        }

            .footer-custom a {
                color: white;
                text-decoration: none;
                margin-right: 15px;
            }

                .footer-custom a:hover {
                    text-decoration: underline;
                }

        .footer-social li {
            display: inline;
            margin-right: 15px;
        }

        .footer-social a {
            font-size: 1.2rem;
            color: white;
        }

            .footer-social a:hover {
                color: #1d9bf0; /* Adds a subtle hover effect */
            }

        .footer-links a {
            margin-right: 15px;
        }

        .subscribe-section input {
            border-radius: 30px;
            padding: 5px 15px;
        }

        .subscribe-section button {
            border-radius: 30px;
            padding: 5px 15px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E Learning</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Create Account Button -->
                    <a class="btn btn-primary create-account-btn" asp-area="" asp-controller="Account" asp-action="Register">Create Account</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer-custom">
        <div class="container">
            <div class="row">
                <!-- Social Links -->
                <div class="col-md-4 text-center text-md-start">
                    <h5>Follow Us</h5>
                    <ul class="list-unstyled footer-social">
                        <li>
                            <a href="https://facebook.com" target="_blank"><i class="bi bi-facebook"></i> Facebook</a>
                        </li>
                        <br />
                        <li>
                            <a href="https://instagram.com" target="_blank"><i class="bi bi-instagram"></i> Instagram</a>
                        </li>
                        <br />
                        <li>
                            <a href="mailto:support@elearning.com"><i class="bi bi-envelope"></i> Email</a>
                        </li>
                        <br />
                    </ul>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 text-center">
                    <h5>Quick Links</h5>
                    <div class="footer-links">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a><br />
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a><br />
                        <a asp-area="" asp-controller="Home" asp-action="Subscribe">Subscribe</a><br />
                    </div>
                </div>

                <!-- Subscribe Section -->
                <div class="col-md-4 text-center text-md-end">
                    <h5>Subscribe</h5>
                    <div class="subscribe-section">
                        <form asp-action="Subscribe" method="post" class="d-flex justify-content-center justify-content-md-end">
                            <input type="email" name="email" placeholder="Your email" class="form-control me-2" required />
                            <button type="submit" class="btn btn-primary">Subscribe</button>
                        </form>
                    </div>
                </div>
            </div>
            <hr class="bg-light" />
            <div class="text-center mt-3">
                <p>&copy; 2025 - E_Learning - All Rights Reserved</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
